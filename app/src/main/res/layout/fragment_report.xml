<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/custom_range_report"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/custom_range_report"
            android:textAlignment="center"
            android:textColor="#fff" />


        <Button
            android:id="@+id/monthly_report"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_range_report"
            android:layout_margin="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/monthly_report"
            android:textAlignment="center"
            android:textColor="#fff" />


        <Button
            android:id="@+id/favorites_report"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monthly_report"
            android:layout_margin="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/favorites_report"
            android:textAlignment="center"
            android:textColor="#fff" />

    </RelativeLayout>

</RelativeLayout>